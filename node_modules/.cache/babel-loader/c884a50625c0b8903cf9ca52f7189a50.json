p.vue"],"sourcesContent":["<template>\r\n  <header>\r\n    <nav class=\"container\">\r\n      <div class=\"branding\">\r\n        <router-link class=\"header\" :to=\"{ name: 'Home' }\"\r\n          >Site de blog</router-link\r\n        >\r\n      </div>\r\n      <div class=\"nav-links\">\r\n        <ul v-show=\"!mobile\">\r\n          <router-link class=\"link\" :to=\"{ name: 'Home' }\">Commencer</router-link>\r\n          <router-link class=\"link\" :to=\"{ name: 'Blogs' }\">Blogs</router-link>\r\n          <router-link v-if=\"admin\" class=\"link\" :to=\"{ name: 'CreatePost' }\">Rédiger un post</router-link>\r\n          <router-link v-if=\"!user\" class=\"link\" :to=\"{ name: 'Login' }\">Connexion / enregistrement</router-link>\r\n        </ul>\r\n        <div v-if=\"user\" @click=\"toggleProfileMenu\" class=\"profile\" ref=\"profile\">\r\n          <span>{{ this.$store.state.profileInitials }}</span>\r\n          <div v-show=\"profileMenu\" class=\"profile-menu\">\r\n            <div class=\"info\">\r\n              <p class=\"initials\">{{ this.$store.state.profileInitials }}</p>\r\n              <div class=\"right\">\r\n                <p>{{ this.$store.state.profileFirstName }} {{ this.$store.state.profileLastName }}</p>\r\n                <p>{{ this.$store.state.profileUserName }}</p>\r\n                <p>{{ this.$store.state.profileEmail }}</p>\r\n              </div>\r\n            </div>\r\n            <div class=\"options\">\r\n              \r\n              <div class=\"option\">\r\n                <router-link class=\"option\" :to=\"{ name: 'Profile' }\">\r\n                  <font-awesome-icon class=\"icon\" icon=\"fa-solid fa-user\" />\r\n                  <p>Profil de l'utilisateur</p>\r\n                </router-link>\r\n              </div>\r\n\r\n              <div v-if=\"admin\" class=\"option\">\r\n                <router-link class=\"option\" :to=\"{ name: 'Admin' }\">\r\n                  <font-awesome-icon class=\"icon\" icon=\"fa-solid fa